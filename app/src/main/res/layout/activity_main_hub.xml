<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.hub.MainHubActivity">

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scorescreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="396dp"
        android:layout_height="353dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/all_questions_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_all_questions"
                android:fontFamily="@font/antic_slab"
                android:text="All Questions"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/general_knowledge_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_general_knowledge"
                android:fontFamily="@font/antic_slab"
                android:text="General Knowledge"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/sports_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_sports"
                android:fontFamily="@font/antic_slab"
                android:text="Sports"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/computers_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_computers"
                android:fontFamily="@font/antic_slab"
                android:text="Computers"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/video_games_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_video_games"
                android:fontFamily="@font/antic_slab"
                android:text="Video Games"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/animals_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_animals"
                android:fontFamily="@font/antic_slab"
                android:text="Animals"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/tv_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_tv"
                android:fontFamily="@font/antic_slab"
                android:text="Telivison"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/movies_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_movies"
                android:fontFamily="@font/antic_slab"
                android:text="Movies"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/music_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_music"
                android:fontFamily="@font/antic_slab"
                android:text="Music"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/nature_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_nature"
                android:fontFamily="@font/antic_slab"
                android:text="Nature"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/geography_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_geography"
                android:fontFamily="@font/antic_slab"
                android:text="Geography"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/vehicles_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_vehicles"
                android:fontFamily="@font/antic_slab"
                android:text="Vehicles"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/art_button"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_art"
                android:fontFamily="@font/antic_slab"
                android:text="Art"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/history_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:background="#2D4159"
                android:drawableLeft="@drawable/ic_history"
                android:fontFamily="@font/antic_slab"
                android:text="History"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/high_score_button"
        android:layout_width="254dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/highscorebutton"
        android:fontFamily="@font/antic_slab"
        android:text="Check Highscores"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_points_textView"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/antic_slab"
        android:text="Total Points: 220"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/antic_slab"
        android:text="Ranking: 13th"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/total_points_textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="327dp"
        android:layout_height="98dp"
        android:fontFamily="@font/antic_slab"
        android:text="The Quizzer"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <Switch
        android:id="@+id/TriviathonSwitch"
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:text="Triviathon game mode"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="290dp" />

</androidx.constraintlayout.widget.ConstraintLayout>